@import vars

@keyframes spinner
  0%
    opacity .3
  15%
    opacity 1
  75%
    opacity .3
  100%
    opacity .3

.spinner
  display inline-block
  position relative
  transform rotate(45deg)

  *
    animation spinner 1500ms ease-out infinite
    background #000
    border-radius 2px
    display block
    height 4px
    left 0
    margin -4px 0 0 -2px
    position absolute
    opacity .3
    top 0
    width 8px

    &:nth-child(1)
      animation-delay 0
      transform rotate(0deg) translate(-10px)

    &:nth-child(2)
      animation-delay 187.5ms
      transform rotate(45deg) translate(-10px)

    &:nth-child(3)
      animation-delay 375ms
      transform rotate(90deg) translate(-10px)

    &:nth-child(4)
      animation-delay 562.5ms
      transform rotate(135deg) translate(-10px)

    &:nth-child(5)
      animation-delay 750ms
      transform rotate(180deg) translate(-10px)

    &:nth-child(6)
      animation-delay 937.5ms
      transform rotate(225deg) translate(-10px)

    &:nth-child(7)
      animation-delay 1125ms
      transform rotate(270deg) translate(-10px)

    &:nth-child(8)
      animation-delay 1312.5ms
      transform rotate(315deg) translate(-10px)

@keyframes pulser
  0%
    height 100%
    opacity 1
    width 100%
  50%
    opacity 0
    transform scale(3)
  100%
    opacity 0

.pulser, .super-pulser
  background #333
  border-radius 3px
  display inline-block
  height 7px
  position relative
  width 7px

  *
    animation pulser 1.5s infinite
    border 1px solid red
    border-radius 4px
    display inline-block
    height 100%
    left -1px
    position absolute
    top -1px
    width 100%

.super-pulser

  *
    &:nth-child(1)
      animation-delay .10s
      border-color red

    &:nth-child(2)
      animation-delay .20s
      border-color orange

    &:nth-child(3)
      animation-delay .30s
      border-color yellow

    &:nth-child(4)
      animation-delay .40s
      border-color green

    &:nth-child(5)
      animation-delay .50s
      border-color blue

    &:nth-child(6)
      animation-delay .60s
      border-color purple

@keyframes bouncing-ball
  0%
    animation-timing-function ease-out
    bottom 0
  50%
    animation-timing-function ease-in
    bottom 100%
  100%
    bottom 0

.ball
  display inline-block
  height 32px
  position relative
  width 8px

  *
    animation bouncing-ball 1s linear infinite
    background #333
    border-radius 4px
    bottom 0
    display inline-block
    height 25%
    left 0
    position absolute
    width 100%

@keyframes wave
  10%
    opacity 1
    transform scaleY(2)
  40%
    opacity .5
    transform scaleY(1)

.wave
  display inline-block
  position relative
  height 11px
  vertical-align middle
  width 18px

  *
    animation 1.5s ease-out infinite wave
    background #333
    border 1px solid #000
    display inline-block
    float left
    height 5px
    margin 0 1px
    opacity .5
    width 2px

    &:nth-child(1)
      animation-delay 0s

    &:nth-child(2)
      animation-delay .15s

    &:nth-child(3)
      animation-delay .3s

.bar
  background-image linear-gradient(left, red 10%, blue 30%)
  border 1px solid #ccc
  border-radius 3px
  display block
  height 13px
  position relative
  overflow hidden
  width 208px
